  <!-- Modal -->
  <div class="modal" id="modal" aria-hidden="true">
    <div class="panel" role="dialog" aria-modal="true">
      <header>
        <div class="h" id="m-title">Title</div>
        <div class="c" id="m-cat">• Category</div>
        <button class="x" id="m-close" aria-label="Close">Close</button>
      </header>
      <div class="frame"><iframe id="m-frame" title="Email preview"></iframe></div>
      <div class="actions">
        <a id="m-open" class="btn" target="_blank" rel="noopener">Open full email</a>
      </div>
    </div>
  </div>

  <script>
    // Modal logic (unchanged from your base with small guards)
    const modal = document.getElementById('modal');
    const mTitle = document.getElementById('m-title');
    const mCat   = document.getElementById('m-cat');
    const mFrame = document.getElementById('m-frame');
    const mOpen  = document.getElementById('m-open');
    const mClose = document.getElementById('m-close');

    function openModal(title, cat, href){
      mTitle.textContent = title; mCat.textContent = '• ' + cat; mFrame.src = href; mOpen.href = href;
      modal.classList.add('open'); modal.setAttribute('aria-hidden','false');
    }
    function closeModal(){ modal.classList.remove('open'); modal.setAttribute('aria-hidden','true'); mFrame.removeAttribute('src'); }

    document.addEventListener('click', (e)=>{
      const am = e.target.closest('.amulet');
      if(am){ const fig = am.closest('figure'); const a = fig.querySelector('a'); openModal(a.dataset.title, fig.dataset.cat, a.getAttribute('href')); }
      if(e.target === modal) closeModal();
      const imgLink = e.target.closest('a');
      if(imgLink && imgLink.querySelector('.thumb') && !(e.metaKey||e.ctrlKey)){
        e.preventDefault(); const fig = imgLink.closest('figure');
        openModal(imgLink.dataset.title, fig.dataset.cat, imgLink.getAttribute('href'));
      }
    });
    document.addEventListener('keydown', e=>{ if(e.key==='Escape') closeModal(); });
    mClose.addEventListener('click', closeModal);
    document.getElementById('year').textContent = new Date().getFullYear();

    // Layout toggles
    const body = document.body;
    function setLayout(cls){ body.classList.remove('layout-editorial','layout-masonry','layout-timeline'); body.classList.add(cls);
      document.querySelectorAll('.seg [data-layout]').forEach(b=>b.dataset.active = (b.dataset.layout===cls));
      document.querySelectorAll('.seg [data-layout]').forEach(b=> b.setAttribute('aria-selected', b.dataset.layout===cls));
      localStorage.setItem('layout', cls);
    }
    document.getElementById('b-editorial').addEventListener('click', ()=>setLayout('layout-editorial'));
    document.getElementById('b-masonry').addEventListener('click',  ()=>setLayout('layout-masonry'));
    document.getElementById('b-timeline').addEventListener('click', ()=>setLayout('layout-timeline'));

    // Theme toggle
    const themeBtn = document.getElementById('b-theme');
    function toggleTheme(){ const next = (document.body.dataset.theme==='paper')? 'ink':'paper'; document.body.dataset.theme = next; themeBtn.textContent = (next==='paper')? 'Dark':'Light'; localStorage.setItem('theme', next); }
    themeBtn.addEventListener('click', toggleTheme);

    // Restore preferences
    const savedLayout = localStorage.getItem('layout'); if(savedLayout) setLayout(savedLayout);
    const savedTheme  = localStorage.getItem('theme'); if(savedTheme){ document.body.dataset.theme=savedTheme; themeBtn.textContent = (savedTheme==='paper')? 'Dark':'Light'; }

    // Category filter (chips)
    const chips = document.querySelectorAll('.chip');
    chips.forEach(ch=> ch.addEventListener('click', ()=>{
      chips.forEach(c=>c.dataset.active='false'); ch.dataset.active='true';
      const key = ch.dataset.filter; const figs = document.querySelectorAll('figure');
      figs.forEach(f=>{ const on = (key==='all' || f.dataset.cat===key); f.style.display = on? 'flex':'none'; });
    }));
  </script>
</body>
